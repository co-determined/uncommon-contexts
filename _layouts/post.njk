---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    {% if date %}
    <time class="post-date" datetime="{{ date | htmlDateString }}">
      {{ date | readableDate }}
    </time>
    {% endif %}
    {% if author %}
    <p class="post-author">by {{ author }}</p>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <footer class="post-footer">
    <a href="{{ '/' | url }}" class="back-link">‚Üê Back to all posts</a>
  </footer>
</article>
