---
layout: home.njk
title: Home
---

<div class="homepage-container">
  
  <!-- HERO ZONE: Identity -->
  <section class="site-hero">
    <h1>UncommonContexts</h1>
    <p class="tagline">Where uncommon contexts illuminate new understanding</p>
    <nav class="hero-nav">
      <a href="{{ '/posts/' | url }}">Posts</a>
      <a href="{{ '/about/' | url }}">About</a>
      <a href="{{ '/subscribe/' | url }}">Subscribe</a>
    </nav>
  </section>

  <!-- FEATURED POST: The Star -->
  <section class="featured-section">
    <div class="featured-label">Latest Thinking</div>
    <article class="featured-post">
      {% set latestPost = collections.posts[0] %}
      {% if latestPost %}
        <h2><a href="{{ latestPost.url | url }}">{{ latestPost.data.title }}</a></h2>
        <p class="featured-excerpt">
          {{ latestPost.data.description or latestPost.templateContent | striptags | truncate(160) }}
        </p>
        <div class="post-meta">
          <span class="date">{{ latestPost.date | readableDate }}</span>
          <span class="separator">Â·</span>
          <span class="reading-time">{{ latestPost.templateContent | striptags | wordcount | readingTime }} min read</span>
        </div>
        <a href="{{ latestPost.url | url }}" class="read-more">
          Read Essay
        </a>
      {% endif %}
    </article>
  </section>

  <!-- ARCHIVE: Supporting Cast -->
  <section class="archive-section">
    <div class="archive-box">
      <div class="archive-label">More Explorations</div>
      <ul class="post-list">
        {% for post in collections.posts %}
          {% if not loop.first %}
            <li>
              <a href="{{ post.url | url }}">
                <span class="post-title">{{ post.data.title }}</span>
                <span class="post-date">{{ post.date | readableDate }}</span>
              </a>
              {% if post.data.description %}
                <div class="post-description">{{ post.data.description }}</div>
              {% endif %}
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </section>

</div>